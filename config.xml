<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.Recruitment.demo"
    versionCode = "10" 
    version     = "1.0.0" >

	<!-- app icon-->
<!-- plugins -->
<gap:plugin name="com.indigoway.cordova.whitelist.whitelistplugin" version="1.1.1" />
<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
<gap:plugin name="org.apache.cordova.file-transfer" source="npm"  />
<gap:plugin name="org.apache.cordova.file" version="1.3.1" />
<gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
<gap:plugin name="com.phonegap.plugins.pushplugin"  />
<gap:plugin name="com.cesidiodibenedetto.filechooser" version="1.0.0" />
<feature name="http://api.phonegap.com/1.0/file" />
<feature name="File">
       <param name="android-package" value="org.apache.cordova.file.FileUtils" />
</feature>
<feature name="FileTransfer">
      <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
</feature>
<feature name="Storage">
       <param value="org.apache.cordova.Storage" name="android-package"/>
</feature>

<platform name="android">
        <preference name="Fullscreen" value="true" />
    </platform>


    <!-- versionCode is optional and Android only -->
    <name>demo</name>

    <description>
    Recruitment-demo
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
  Priyanka Mhatre
    </author>

    <!--
      This allows your app to load assets from all *.phongap.com domains
    -->
   <access origin="*" />
</widget>
